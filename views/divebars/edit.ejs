<% layout('layouts/boilerplate') %> 
  <h1><%= divebar.title %> - Edit</h1>

  <form action="/divebars/<%=divebar._id%>?_method=PUT" method="POST">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="divebar[title]" value="<%= divebar.title %>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="divebar[location]" value="<%= divebar.location %>">
    </div>
    <div>
        <label for="location">Description</label>
        <input type="text" id="description" name="divebar[description]" value="<%= divebar.description %>">
    </div>
    <button>Update Divebar</button>
  </form>

<a href="/divebars/<%= divebar._id %>">Cancel</a>